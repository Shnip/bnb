<div class="row" id="photo-preview">
  <% if @photos %>
    <% @photos.each do |photo| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-header photo-preview">
            <%= image_tag photo.image.url(), class: "card-img-top" %>
          </div>
          <div class="card-body">
            <%= link_to photo, remote: true, method: :delete, class: "float-right", data: {confirm: "Are you sure?"} do%>
              <i class="fas fa-times fa-lg"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
