<hr>

<div class="review">
  <div class="review-avatar">
    <%= image_tag gravatar_url(review.user, size: 60), class: "rounded-circle"  %>
  </div>
  <div class="review-body">
    <div class="review-header">
      <strong>
        <%= review.user.full_name %>
        <span id="star_<%= review.id %>" class="ml-2"></span>
      </strong>
      <span class="float-right">
        <%= link_to "Remove my review", [@room, review], method: :delete, data: {confirm: "Are you sure?"} if current_user?(review.user) %>
      </span>
    </div>
    <div class="review-date"><%= review.created_at.strftime("%v").downcase %></div>
    <div class="review-content"> <%= review.comment %></div>
  </div>
</div>
<script>
  $("#star_<%= review.id %>").raty({
    path: '/assets',
    readOnly: true,
    score: <%= review.star %>
  })
</script>
